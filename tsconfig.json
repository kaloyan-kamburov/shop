{
  "compilerOptions": {
    "module": "ESNext", // or ES2015, ES2020
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "checkJs": false,
    "noCheck": true
  },
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    "esm": true
  }
}
